@inject AudioPlayerService service

Audio @IsPlaying

<MudButton OnClick="Play"> Play </MudButton>

@code{
    private bool IsPlaying = false;


    override protected async Task OnInitializedAsync()
    {
        service.OnPlaying += OnPlaying;

    }

    private void OnPlaying(bool state)
    {
        IsPlaying = state;
    }

    private void Play()
    {
        service.SetPlaying(!IsPlaying);
    }
}